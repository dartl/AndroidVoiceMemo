<!--suppress AndroidDomInspection -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/main_add_memo"
        android:id="@+id/btn_show_AddNote"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textSize="@dimen/main_heading_size"
        style="@style/gawk_style_button_invers"
        android:backgroundTintMode="src_in" />

    <EditText
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SearchPhrase"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_show_AddNote"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:singleLine="true"
        android:imeOptions="actionSearch"
        android:text="@string/main_searchPhrase"
        android:paddingRight="30dp"
        android:translationZ="50dp">
        <requestFocus />
    </EditText>

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewNodes"
        android:layout_below="@+id/editText_SearchPhrase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonCancelSearch"
        android:src="@drawable/cancel"
        android:background="#00ffffff"
        android:layout_alignTop="@+id/editText_SearchPhrase"
        android:layout_alignRight="@+id/editText_SearchPhrase"
        android:layout_alignEnd="@+id/editText_SearchPhrase"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:paddingTop="5dp" />

</RelativeLayout>
