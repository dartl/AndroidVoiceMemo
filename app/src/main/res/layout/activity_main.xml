<!--suppress AndroidDomInspection -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:id="@+id/relativeLayout">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_add_memo"
        android:id="@+id/btn_show_AddNote"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/editText_SearchPhrase"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/btn_show_AddNote"
        android:layout_toLeftOf="@+id/btn_Search"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:inputType="text"
        android:singleLine="true"
        android:text="@string/main_searchPhrase">
        <requestFocus />
    </EditText>

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_search"
        android:id="@+id/btn_Search"
        android:layout_alignTop="@+id/btn_Search_Clear"
        android:layout_toLeftOf="@+id/btn_Search_Clear"
        android:layout_toStartOf="@+id/btn_Search_Clear" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/listViewNodes"
        android:layout_below="@+id/editText_SearchPhrase"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_clear"
        android:id="@+id/btn_Search_Clear"
        android:layout_above="@+id/listViewNodes"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

</RelativeLayout>
