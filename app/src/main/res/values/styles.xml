<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="actionBarStyle">@style/MyActionBarTheme</item>
    </style>

    <style name="MyActionBarTheme" parent="@style/Widget.AppCompat.ActionBar">
        <item name="background">@drawable/bg_action_bar</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#fff</item>
        <item name="android:height">56dp</item>
    </style>

    <style name="gawk_style_button">
        <item name="android:background">@drawable/button_animation</item>
        <item name="android:paddingTop">@dimen/addNote_button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/addNote_button_padding</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="gawk_style_button_delete" parent="gawk_style_button_red">
        <item name="android:drawableTop">@drawable/delete_note</item>
        <item name="android:textOn">false</item>
        <item name="android:paddingTop">10dp</item>
    </style>

    <style name="gawk_style_button_red">
        <item name="android:background">@drawable/button_red_animation</item>
        <item name="android:paddingTop">@dimen/addNote_button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/addNote_button_padding</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="gawk_style_button_invers">
        <item name="android:background">@drawable/button_invers_animation</item>
        <item name="android:paddingTop">@dimen/addNote_button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/addNote_button_padding</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="gawk_style_button_gray">
        <item name="android:background">@drawable/button_gray_animation</item>
        <item name="android:paddingTop">@dimen/addNote_button_paddingTop</item>
        <item name="android:paddingBottom">@dimen/addNote_button_padding</item>
    </style>

    <style name="gawk_style_date">
        <item name="android:drawableLeft">@drawable/icon_time</item>
        <item name="android:textColor">@color/dateColor</item>
        <item name="android:textStyle">italic</item>
    </style>

</resources>


